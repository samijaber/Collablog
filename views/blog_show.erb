<% if session[:info][:nickname] == @blog.screen_name %>
<form action="/blog/<%= @blog.id %>/adduser" method="post">
  <div>
  <label>allow a user to post</label>
  <input type="text" name="screenname">
  </div>
  <input type="submit">
</form>
<% end %>
<hr>
<p><%= @permissions.length %> user<%= @permissions.length==1?"":"s" %> posting</p>
<ul>
<% @permissions.each do |permission| %>
<li>
<a href="http://www.twitter.com/<%= permission.screen_name %>"><%= permission.screen_name %></a>
<% if current_user and session[:info][:nickname] == @blog.screen_name %>
<div><a method="post" href="<%= @@blog_path %><%= @blog.id %>/deluser/<%= permission.screen_name %>">remove access</a></div>
<% end %>
</li>
<% end %>
</ul>
<hr>
<h1 style="text-align:center;"><%= @blog.title %></h1>
<h3 style="text-align:center;">using <a href="https://twitter.com/hashtag/<%= @blog.hashtag.gsub("#","") %>"><%= @blog.hashtag %></a></h3>
<hr>
<ul class="tweetc">
<% @tweets.each do |tweet| %>
<li>
<div style="text-align:center;"><a href="http://www.twitter.com/<%= tweet.user.screen_name %>"><img src="<%= tweet.user.profile_image_uri %>"><br><strong><%= tweet.user.screen_name %></strong> - <%= tweet.created_at.strftime("%A, %b %d") %></a></div>
<a style="flex-basis:100%" href="<%= tweet.uri %>"><div class="tweet"><%= tweet.text %></div></a>
<div style="text-align:right;flex-basis: 100%;"></div>
</div>
</li> 
<hr>
<% end %>
</ul>
<a href="<%= @@app_path %>">back</a>

